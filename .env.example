# Environment
NODE_ENV=development

# API Configuration
PORT=8080
CORS_ORIGIN=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/modular_house_dev

# Email Configuration (SMTP)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM_NAME=Modular House
MAIL_FROM_EMAIL=noreply@modular.house

# Internal notification email
MAIL_INTERNAL_TO=admin@modular.house

# Customer confirmation email
# When true, customers receive an automated confirmation email after submitting an enquiry.
# When false, only internal notification emails are sent to staff.
# Customer emails are sent to the email address provided in the enquiry form.
CUSTOMER_CONFIRM_ENABLED=true

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
PASSWORD_SALT_ROUNDS=12

# SEO & Robots
ROBOTS_ALLOW=false

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8080
