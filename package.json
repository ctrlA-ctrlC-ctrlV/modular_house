{
  "name": "@modular-house/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "pnpm --recursive run format",
    "typecheck": "pnpm --recursive run typecheck",
    "test": "pnpm --recursive run test",
    "test:run": "pnpm --recursive run test:run",
    "test:coverage": "pnpm --recursive run test:coverage",
    "test:coverage:enforce": "pnpm --recursive run test:coverage && echo 'Coverage thresholds enforced across all packages'",
    "clean": "pnpm --recursive run clean && rm -rf node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.39.0",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3"
  }
}