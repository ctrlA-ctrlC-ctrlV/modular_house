{
  "extends": "@modular-house/config/tsconfig",
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "./dist",
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": [
    "src/**/*", "scripts/**/*", "prisma/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts"
  ]
}